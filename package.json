{
  "name": "vite-plugin-module-list",
  "private": false,
  "version": "2.3.1",
  "description": "Vite plugin that writes a module that dynamically imports modules found in a folder.",
  "author": "David Bonnet <david@bonnet.cc>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/davidbonnet/vite-plugin-module-list.git"
  },
  "type": "module",
  "main": "./dist/main.js",
  "exports": {
    "types": "./dist/main.d.ts",
    "import": "./dist/main.js",
    "require": "./dist/cjs/main.cjs"
  },
  "scripts": {
    "with": "node --env-file=${npm_config_env:-.env.local} $(which npm)",
    "dev": "node --env-file-if-exists=.env --env-file-if-exists=.env.local --env-file-if-exists=${ENV_PATH:-.env.local} --experimental-strip-types --disable-warning=ExperimentalWarning --watch-path=src/server src/server/main.ts",
    "start": "node --env-file-if-exists=.env --env-file-if-exists=${ENV_PATH:-.env} --experimental-strip-types --disable-warning=ExperimentalWarning src/server/main.ts",
    "dev:test": "vitest --update --root=./",
    "test": "npm run lint && npm run format && vitest run --root=./",
    "build:lib": "rm -rf dist; tsc --project tsconfig.package.json; tsc --project tsconfig.package.cjs.json; find dist/cjs -name \"*.js\" -exec sh -c 'sed -i \"\" -E \"s/require\\(\\\"([^\\\"]+)\\.js\\\"\\);/require(\\\"\\1.cjs\\\");/\" $0; mv \"$0\" \"${0%.js}.cjs\"' {} \\;",
    "build:doc": "typedoc --tsconfig tsconfig.package.json",
    "build:doc:save": "typedoc --tsconfig tsconfig.package.json && git add -A && git commit -a -m 'Update doc'",
    "build:app": "vite build",
    "prepare": "npm run build:lib",
    "format": "prettier --check './**/*.{css,scss,md,mdx,json,tsx,ts,jsx,js}'",
    "format:fix": "prettier --write './**/*.{css,scss,md,mdx,json,tsx,ts,jsx,js}'",
    "lint": "npm run lint:ts",
    "lint:fix": "npm run lint:ts:fix",
    "lint:ts": "eslint .",
    "lint:ts:fix": "eslint --fix .",
    "release:init": "npm publish --access=public",
    "release:patch": "npm version patch && git push origin --follow-tags && npm publish",
    "release:minor": "npm version minor && git push origin --follow-tags && npm publish",
    "release:major": "npm version major && git push origin --follow-tags && npm publish",
    "release:alpha": "npm version prerelease --preid=alpha && git push origin --follow-tags && npm publish --tag=next",
    "release:beta": "npm version prerelease --preid=beta && git push origin --follow-tags && npm publish --tag=next"
  },
  "files": [
    "dist",
    "README.md",
    "doc",
    "lib"
  ],
  "keywords": [
    "vite",
    "vite-plugin",
    "module",
    "generator",
    "import"
  ],
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@nevoland/get-global": "^2.1.0",
    "@preact/preset-vite": "^2.10.1",
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.18.11",
    "@types/normalize-path": "^3.0.2",
    "@typescript-eslint/parser": "^8.26.1",
    "autoprefixer": "^10.4.21",
    "clsx": "^2.1.1",
    "cssnano": "^7.0.6",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-sort-keys": "^2.3.5",
    "eslint-plugin-tailwindcss": "^3.18.0",
    "eslint-plugin-vitest": "^0.5.4",
    "pino-pretty": "^13.0.0",
    "postcss": "^8.5.3",
    "postcss-pseudo-classes": "^0.4.0",
    "preact": "^10.26.4",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "realue": "^5.0.0-alpha.27",
    "tailwindcss": "^3.4.17",
    "typedoc": "^0.28.0",
    "typedoc-plugin-markdown": "^4.5.0",
    "typescript": "^5.8.2",
    "unchangeable": "^1.7.3",
    "vite": "^6.2.2",
    "vite-plugin-module-list": "^2.2.2",
    "vitest": "^3.0.8"
  },
  "dependencies": {
    "normalize-path": "^3.0.0",
    "prettier": "^3.0.3"
  }
}
